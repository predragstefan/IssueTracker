<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>
            @Html.ActionLink("Vrsta problema", "Index", new { sortOrder = ViewBag.VrstaSortParm })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Naziv)
        </th>
        <th>
            @Html.ActionLink("Datum kreiranja", "Index", new { sortOrder = ViewBag.DateSortParm })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kreirao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VremePoslednjeIzmene)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.PoslednjiIzmenio)
        </th>
        <th>
            @Html.ActionLink("Status", "Index", new { sortOrder = ViewBag.StatusSortParm })
        </th>
        <th>
            Akcije
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VrstaProblema.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Naziv)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DatumKreiranja)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kreirao.ImePrezime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VremePoslednjeIzmene)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PoslednjiIzmenio.ImePrezime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <div class="btn-group" role="group" aria-label="...">
                    <button type="button" class="btn btn-default">@Html.ActionLink("Edit", "Edit", new { id = item.Id })</button>
                    <button type="button" class="btn btn-default">@Html.ActionLink("Details", "Details", new { id = item.Id })</button>
                    <button type="button" class="btn btn-default">@Html.ActionLink("Delete", "Delete", new { id = item.Id })</button>
                </div>
            </td>
        </tr>
    }
</table>